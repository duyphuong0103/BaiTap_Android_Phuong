<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="#fcfcfc">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logoflower" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Diiph Florist"
        android:textStyle="italic"
        android:textSize="28sp"
        android:textColor="#f25f3a"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Rực rỡ như những đóa hoa"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"
        android:textColor="#31acf7"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="15dp"
        android:textColorHint="#bfbfbd"
        />
    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:drawableStart="@drawable/ic_pass"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:textColorHint="#bfbfbd"/>

    <CheckBox
        android:id="@+id/checkRememberPass"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="left"
        android:text="Ghi nhớ mật khẩu"
        android:textSize="15sp"
        android:textColor="#7d7a7a"/>
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textSize="16dp"
        android:backgroundTint="#f54e4e"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Chưa có tài khoản? Đăng ký ngay"
        android:textSize="15sp"/>
    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Đăng ký"
        android:textSize="16dp"
        android:backgroundTint="#fa8282"/>
</LinearLayout>